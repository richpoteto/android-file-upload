<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/app_bg_color">

    
    <RelativeLayout 
        android:id="@+id/take_picture"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:background="@drawable/white_bg_shadow"  >        

     <ImageView
        android:id="@+id/picture_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/photo"/>
        
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/picture_image"
        android:layout_marginLeft="5dp"
        android:text="Picture"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_centerVertical="true"
        android:textColor="@color/text_black"/>

	</RelativeLayout>    
    
    <RelativeLayout 
        android:id="@+id/take_video"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/take_picture"
	    android:padding="5dp"
	    android:layout_marginLeft="10dp"
	    android:background="@drawable/white_bg_shadow"  >        

     <ImageView
        android:id="@+id/video_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/video"/>
        
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/video_image"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:text="Video"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/text_black"/>

	</RelativeLayout>
	
    <RelativeLayout 
        android:id="@+id/take_audio"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/take_video"
	    android:padding="5dp"
	    android:layout_marginLeft="10dp"
	    android:background="@drawable/white_bg_shadow"  >        

     <ImageView
        android:id="@+id/audio_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/audio"/>
        
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/audio_image"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:text="Audio"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/text_black"/>

	</RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:background="#ff00ff"
        android:layout_below="@id/take_picture"/>        
</RelativeLayout>